<nav class="navbar navbar-default">
  <div class="container fci">
    <%= form_tag textbooks_path, class: "navbar-form navbar-center glyphicon glyphicon-search", role: 'search', method: :get do |f| %>
      <div class="form-group">
        <%= text_field_tag :q, params[:q], class: "form-control"%>
      </div>
      <%= button_tag "Search", class: "btn btn-default", name: nil %>
    <% end %>
  </div>
</nav>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Price</th>
    </tr>
  </thead>

  <% @textbooks.each do |textbook| %>
    <tr class="clickable-row">
      <td><a data-no-turbolink="true" href="/textbooks/<%= textbook.id %>"><%= textbook.title %></a></td>
      <td><a data-no-turbolink="true" href="/textbooks/<%= textbook.id %>"><%= textbook.author %></a></td>
      <td><a data-no-turbolink="true" href="/textbooks/<%= textbook.id %>">$<%= sprintf '%.2f', textbook.price %></a></td>
    </tr>
  <% end %>
</table>
