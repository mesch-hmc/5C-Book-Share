<%= form_for :textbook, url: textbooks_path do |f| %>
  <% if @textbook.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@textbook.errors.count, "error") %> prohibited this link from being saved:</h2>

      <ul>
      <% @textbook.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h3>Textbook information</h3>
  <hr>
  <div class="form-group">
    <%= f.label :title %> <br>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :author %> <br>
    <%= f.text_field :author, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :isbn %> <br>
    <%= f.text_field :isbn, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :price %> <br>
    <%= f.number_field :price, in: 0.00..5000.00, step: 0.01, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit 'Submit', class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
